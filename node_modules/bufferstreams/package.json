  },
  "devDependencies": {
    "eslint": "^1.0.0",
    "istanbul": "^0.3.17",
    "istanbul-coveralls": "^1.0.3",
    "mocha": "^2.2.5",
    "mocha-lcov-reporter": "^0.0.2",
    "sf-lint": "^1.0.2",
    "streamtest": "^1.2.1"
  },
  "author": {
    "name": "Nicolas Froidure",
    "url": "http://www.insertafter.com/blog.html"
